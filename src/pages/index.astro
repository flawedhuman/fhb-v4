---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const allArtwork = await getCollection('artwork');
const sortedArtwork = allArtwork
  .sort((a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf());

const latestPiece = sortedArtwork[0];
const previousPiece = sortedArtwork[1];
---

<BaseLayout title="FLAWEDHUMANBEING.COM">
  <h1>{latestPiece.data.title}</h1>
  <div class="art-wrap">
    <a href={`/artwork/${previousPiece.slug}`}>
      <img src="/images/previous-arrow.svg" alt="Previous">
    </a>
    <div>
      <img style="border: 1px var(--primary-yellow) solid;" src={latestPiece.data.image} alt={latestPiece.data.title} />
    </div>
    <a href={`/artwork/${latestPiece.slug}`}><img src="/images/next-arrow.svg" alt="Next"></a>
  </div>
  <div class="logo">
    <a href="/"><img src="/images/fhb-logo-black.png" alt="FLAWEDHUMANBEING"></a>
  </div>
</BaseLayout>

<style>

  h1 {
    text-align: center;
    color: var(--primary-yellow);
  }

  .art-wrap {
    margin-inline: auto;
    display: flex;
    gap: 2rem;
    align-items: center;
    justify-content: center;
  }

  .logo {
    margin-block: 1.5rem;
    margin-inline: auto;
    display: block;
    background-color: var(--primary-yellow);
    max-width: 250px;
  }

</style>