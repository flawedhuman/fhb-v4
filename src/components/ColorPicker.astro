<script>
    import { getRandomColorFromPalette } from '../js/color-picker';
  
    // Find all elements with random-color class
    document.querySelectorAll('.random-color').forEach((element) => {
      // Type assertion to HTMLElement
      const el = element as HTMLElement;
      // Get palette from data attribute or default to 'neon'
      const palette = el.dataset.palette || 'neon';
      el.style.backgroundColor = getRandomColorFromPalette(palette);
    });
  
    // For text colors
    document.querySelectorAll('.random-text-color').forEach((element) => {
      const el = element as HTMLElement;
      const palette = el.dataset.palette || 'neon';
      el.style.color = getRandomColorFromPalette(palette);
    });
  </script>
  
  <style>
    .random-color {
      transition: background-color 0.3s ease;
      view-transition-name: random-bg;
    }
  
    .random-text-color {
      transition: color 0.3s ease;
      view-transition-name: random-text;
    }